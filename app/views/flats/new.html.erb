<div class="w-50">

<h1>Add a new Flat</h1>
<%= simple_form_for @flat do |f| %>
<%= f.input :name%>
<%= f.input :address%>
<%= f.input :description%>
<%= f.input :price_per_night%>
<%= f.input :number_of_guests%>
<%= f.submit %>
<%# botton enregisqtrer(submit) %>
<a href="<%=flats_path%>"class="btn btn-primary">Cancel</a>

<% end %>
</div>
